<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/red_notify_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/red_notify_plain_text"
        style="@style/dk_list_sep_text_style"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/red_notify_red_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/red_notify_plain_text"
        android:gravity="center"
        android:textColor="@color/dk_download_text_color"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_incremental_update_hint_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/red_notify_plain_text_right_total"
            style="@style/dk_list_sep_text_style_nogravity"
            android:visibility="gone" />

        <TextView
            android:id="@+id/red_notify_plain_text_right"
            style="@style/dk_list_sep_text_style_nogravity"
            android:textColor="#FB720D"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>