<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dk_transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/dk_transparent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dk_ad_bg"
            android:orientation="vertical" >

            <!-- 头部 -->

            <RelativeLayout
                android:layout_width="310dip"
                android:layout_height="48dip"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@color/dk_transparent"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dip" >

                    <ImageView
                        android:layout_width="78dip"
                        android:layout_height="41dip"
                        android:paddingLeft="10dip"
                        android:src="@drawable/dk_ad_logo" />

                    <!-- 标题 -->

                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dip"
                        android:paddingRight="14dip"
                        android:singleLine="true"
                        android:text="@string/bd_ad_continue_title"
                        android:textColor="@color/dk_gamesdk_white"
                        android:textSize="22sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:src="@drawable/dk_ad_btn_close_selector" />
            </RelativeLayout>

            <!-- 图片 -->

            <RelativeLayout
                android:id="@+id/rlt_ad"
                android:layout_width="310dip"
                android:layout_height="150dip" >

                <!-- 图片 -->

                <ImageView
                    android:id="@+id/iv_ad"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2.0dip"
                    android:background="@color/dk_gamesdk_white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dk_default_ad" />

                <TextView
                    android:id="@+id/txt_summary"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/dk_transparent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:padding="3dip"
                    android:singleLine="true"
                    android:textColor="@color/dk_gamesdk_white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- 底部 -->

            <LinearLayout
                android:layout_width="310dip"
                android:layout_height="35dip"
                android:background="@drawable/dk_transparent"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:background="@color/dk_transparent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/dk_welcom_join"
                    android:textColor="@color/dk_color_fbc000"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>