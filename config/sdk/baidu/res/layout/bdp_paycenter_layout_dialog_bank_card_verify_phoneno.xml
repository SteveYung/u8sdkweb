<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bdp_paycenter_layout_dialog_support_bank"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/bdp_paycenter_layout_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/bdp_paycenter_tv_dialog_tip_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/bdp_paycenter_tips_verify_sms_code"
                android:textColor="#333333"
                android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />

            <ImageView
                android:id="@+id/bdp_paycenter_dialog_iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="4dp"
                android:paddingLeft="50dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:src="@drawable/bdp_paycenter_btn_dialog_close_selector" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bdp_paycenter_dialog_dot_bg" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edt_verify_code"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bdp_paycenter_edittext_selector"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:hint="@string/bdp_paycenter_tip_bank_card_verify_pno"
            android:textColorHint="@color/bdp_color_text_hint"
            android:inputType="number"
            android:textColor="#333333"
            android:textSize="@dimen/bdp_paycenter_text_size_14_sp" >
        </EditText>

        <View
            android:id="@+id/bdp_divider"
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/bdp_paycenter_btn_get_verify_code"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:background="@drawable/bdp_paycenter_btn_pay_cancel_selector"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="14dp" >

        <Button
            android:id="@+id/bdp_paycenter_btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/bdp_paycenter_btn_pay_cancel_selector"
            android:gravity="center"
            android:text="@string/bdp_paycenter_alipay_cancel"
            android:textColor="#ffffff"
            android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />

        <View
            android:layout_width="12dp"
            android:layout_height="38dp" />

        <Button
            android:id="@+id/bdp_paycenter_btn_dialog_pay"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/bdp_paycenter_btn_enough_pay_selector"
            android:gravity="center"
            android:text="@string/bdp_paycenter_alipay_ensure"
            android:textColor="#ffffff"
            android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />
    </LinearLayout>

</LinearLayout>