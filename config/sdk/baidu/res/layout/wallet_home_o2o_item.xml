<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/wallet_home_item_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.baidu.wallet.base.widget.NetImageView
            android:id="@+id/wallet_home_o2o_img"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:scaleType="fitXY"
            android:src="@drawable/wallet_home_o2o_fuma" />

        <TextView
            android:id="@+id/wallet_home_o2o_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="扫一扫"
            android:textSize="18sp" />
    </LinearLayout>

    <include layout="@layout/wallet_home_outer_horizontal_seperator" />

</LinearLayout>