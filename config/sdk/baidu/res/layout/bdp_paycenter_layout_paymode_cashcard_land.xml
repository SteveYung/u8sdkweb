<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bdp_paycenter_top_info_bg_file"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <!-- 易宝储蓄卡支付 -->
	<TextView
	    android:id="@+id/txt_layout_land_title"
	    android:layout_width="fill_parent"
	    android:layout_height="32dp"
	    android:background="@drawable/bdp_paycenter_selector_info"
	    android:gravity="center"
	    android:text="@string/bdp_paycenter_yibao_cash_card"
	    android:textColor="#ffffffff"
	    android:textSize="14sp" />
	
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:layout_marginTop="4dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/bdp_paycenter_ic_credit_card_tip"
        android:text="@string/bdp_paycenter_tip_credit_security"
        android:textColor="@color/bdp_paycenter_color_61B11F"
        android:textSize="@dimen/bdp_paycenter_text_size_12_sp"
        android:gravity="center_vertical" />
    
    <!-- 单笔金额上限 -->
    <TextView
		android:id="@+id/txt_layout_land_out_money_tip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/bdp_paycenter_pay_big_tips"
		android:textColor="@color/bdp_color_999999"
		android:textSize="@dimen/bdp_paycenter_text_size_10_sp" />

    <!-- 支持银行列表 -->
	<Button
	    android:id="@+id/btn_support_bank"
	    android:layout_width="fill_parent"
	    android:layout_height="38dp"
	    android:layout_marginTop="12dp"
	    android:layout_gravity="center_vertical"
	    android:background="@drawable/bdp_paycenter_btn_bank_selector"
	    android:gravity="center"
	    android:text="@string/bdp_paycenter_tip_support_bank"
        android:textColor="#666666"
	    android:textSize="@dimen/bdp_paycenter_text_size_14_sp" />

    <!-- 银行卡管理 -->
	<Button
	    android:id="@+id/btn_layout_land_card_manage"
	    android:layout_width="fill_parent"
	    android:layout_height="38dp"
	    android:layout_marginTop="8dp"
	    android:layout_gravity="center_vertical"
	    android:background="@drawable/bdp_paycenter_btn_bank_selector"
	    android:gravity="center"
	    android:text="@string/bdp_paycenter_yibao_cash_card_manage"
        android:textColor="#666666"
	    android:textSize="@dimen/bdp_paycenter_text_size_14_sp" />
    
</LinearLayout>