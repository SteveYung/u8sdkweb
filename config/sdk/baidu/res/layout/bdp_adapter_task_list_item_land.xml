<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bdp_white">
    <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/bdp_lighter_gray"
        />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:baselineAligned="false"
	    android:orientation="horizontal">
	    
	    <LinearLayout 
	        android:id="@+id/lin_item1"
		    android:layout_width="0dip"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:padding="10dip"
		    android:orientation="horizontal"
		    android:gravity="center_vertical" >
		    
		    <!-- 游戏图标1 -->
			<com.baidu.platformsdk.widget.smartimage.SmartImageView 
			    android:id="@+id/simg_icon1"
			    android:layout_width="50dip"
			    android:layout_height="50dip"
			    android:layout_marginRight="20dip"
			    android:src="@drawable/bdp_icon_logo_default"
			    />
			
			<!-- 游戏名称1 -->
			<TextView 
			    android:id="@+id/txt_name1"
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:layout_marginRight="10dip"
			    android:textSize="14sp"
			    android:textColor="@color/bdp_black"
			    />
			
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical">
			    
			    <!-- 数量1 -->
			    <TextView 
			        android:id="@+id/txt_num1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingBottom="2dip"
			        android:textSize="16sp"
			        android:textColor="@color/bdp_orange"
			        />
			    
			    <!-- 单位1 -->
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingTop="2dip"
			        android:text="@string/bdp_task_unit"
			        android:textSize="12sp"
			        android:textColor="@color/bdp_gray"
			        />
			</LinearLayout>
		</LinearLayout>
	    
	    <View 
	        android:layout_width="1px"
	        android:layout_height="match_parent"
	        android:background="@color/bdp_lighter_gray"
	        />
	    
	    <LinearLayout 
	        android:id="@+id/lin_item2"
		    android:layout_width="0dip"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:padding="10dip"
		    android:orientation="horizontal"
		    android:gravity="center_vertical" >
		    
		    <!-- 游戏图标2 -->
			<com.baidu.platformsdk.widget.smartimage.SmartImageView 
			    android:id="@+id/simg_icon2"
			    android:layout_width="50dip"
			    android:layout_height="50dip"
			    android:layout_marginRight="20dip"
			    android:src="@drawable/bdp_icon_logo_default"
			    />
			
			<!-- 游戏名称2 -->
			<TextView 
			    android:id="@+id/txt_name2"
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:layout_marginRight="10dip"
			    android:textSize="14sp"
			    android:textColor="@color/bdp_black"
			    />
			
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical">
			    
			    <!-- 数量2 -->
			    <TextView 
			        android:id="@+id/txt_num2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingBottom="2dip"
			        android:textSize="16sp"
			        android:textColor="@color/bdp_orange"
			        />
			    
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingTop="2dip"
			        android:text="@string/bdp_task_unit"
			        android:textSize="12sp"
			        android:textColor="@color/bdp_gray"
			        />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>