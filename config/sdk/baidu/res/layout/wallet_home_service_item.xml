<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/wallet_home_item_bg" >

    <com.baidu.wallet.base.widget.NetImageView
        android:id="@+id/wallet_service_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/wallet_service_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/wallet_service_icon"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:singleLine="true"
        android:textColor="@color/ebpay_text_333"
        android:textSize="14sp" />

    <com.baidu.wallet.base.widget.NetImageView
        android:id="@+id/wallet_service_new"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/wallet_home_service_new" />

</RelativeLayout>