<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/bdp_bg_gray_round" >
    
    <ProgressBar 
	    android:layout_width="27dip"
	    android:layout_height="27dip"
	    android:layout_marginLeft="27dip"
	    android:layout_marginRight="12dip"
	    style="?android:attr/progressBarStyle"
	    android:indeterminateDrawable="@drawable/bdp_progress_loading_xml"
        />
    
    <TextView 
        android:id="@+id/txtDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="27dip"
        android:text="@string/bdp_dialog_loading"
        android:textColor="@color/bdp_white"
        />

</LinearLayout>
