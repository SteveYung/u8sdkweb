<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.duoku.platform.download.widget.XCRoundRectImageView
        android:id="@+id/dk_back_iv"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dk_download_nothing_icon" />

    <TextView
        android:id="@+id/dk_back_tv"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dk_back_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#333333" />

    <Button
        android:id="@+id/dk_back_btn_install"
        android:layout_width="56dp"
        android:layout_height="24dp"
        android:layout_below="@+id/dk_back_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/dk_dialog_back_install"
        android:padding="3dp"
        android:textColor="#ffffff"
        android:textSize="11sp" />

</RelativeLayout>
