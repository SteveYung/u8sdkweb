<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bdp_paycenter_layout_dialog_support_bank"
    android:layout_width="325dp"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/bdp_paycenter_layout_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/bdp_paycenter_tv_dialog_tip_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/bdp_paycenter_tips_verify_pay_pwd"
                android:textColor="#333333"
                android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />

            <ImageView
                android:id="@+id/bdp_paycenter_dialog_iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="4dp"
                android:paddingLeft="50dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:src="@drawable/bdp_paycenter_btn_dialog_close_selector" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bdp_paycenter_dialog_dot_bg" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/bdp_paycenter_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bdp_paycenter_edittext_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:imeOptions="actionDone"
        android:gravity="center_vertical"
        android:hint="@string/bdp_paycenter_hint_input_pay_pwd"
        android:textColorHint="@color/bdp_color_text_hint"
        android:textColor="#333333"
        android:textSize="@dimen/bdp_paycenter_text_size_14_sp" >
    </EditText>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bdp_paycenter_find_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bdp_paycenter_find_pay_pwd"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:textColor="@color/bdp_blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="14dp" >

        <Button
            android:id="@+id/bdp_paycenter_btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/bdp_paycenter_btn_pay_cancel_selector"
            android:gravity="center"
            android:text="@string/bdp_paycenter_alipay_cancel"
            android:textColor="#ffffff"
            android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />

        <View
            android:layout_width="12dp"
            android:layout_height="38dp" />

        <Button
            android:id="@+id/bdp_paycenter_btn_dialog_pay"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/bdp_paycenter_btn_enough_pay_selector"
            android:gravity="center"
            android:text="@string/bdp_paycenter_btn_string_pay"
            android:textColor="#ffffff"
            android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />
    </LinearLayout>

</LinearLayout>