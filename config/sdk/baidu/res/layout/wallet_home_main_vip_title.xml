<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginBottom="17dp"
    android:layout_marginTop="23dp" >

    <FrameLayout
        android:id="@+id/wallet_home_user_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="top|center_horizontal" >

        <com.baidu.wallet.base.widget.NetImageView
            android:id="@+id/wallet_home_user_bg"
            android:layout_width="295dp"
            android:layout_height="167dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/wallet_home_title_bg" />

        <LinearLayout
            android:id="@+id/wallet_home_user_layout_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:layout_marginTop="35dp" 
            >

            <TextView
                android:id="@+id/wallet_home_user_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/wallet_home_user_title"
                android:textColor="@color/bd_wallet_home_user_title_text_yellow"
                android:textSize="@dimen/ebpay_text_size_16" />

            <TextView
                android:id="@+id/wallet_home_user_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/wallet_home_user_level"
                android:textColor="@color/bd_wallet_home_user_level_text_yellow"
                android:textSize="@dimen/ebpay_text_size_32" />

            <TextView
                android:id="@+id/wallet_home_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/wallet_home_user_name"
                android:textColor="@color/bd_wallet_home_user_name_text_yellow"
                android:textSize="@dimen/ebpay_text_size_14" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/wallet_home_user_cashback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/wallet_base_title_cashback_money"
        android:textColor="#222222"
        android:textSize="@dimen/ebpay_text_size_14"
        android:visibility="gone" />

    <Button
        android:id="@+id/wallet_home_login"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/wallet_home_login_bg"
        android:gravity="center"
        android:text="@string/wallet_home_login_text"
        android:textColor="#e71f19"
        android:textSize="@dimen/ebpay_text_size_16"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>