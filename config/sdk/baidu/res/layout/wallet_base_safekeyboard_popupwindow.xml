<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bd_wallet_safekeyboard_grayline_width_0.5"
        android:background="@color/bd_wallet_safekeyboard_linegray"/>
    <RelativeLayout 
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bd_wallet_safekeyboard_title_height"
        android:background="@color/bd_wallet_safekeyboard_title_bg">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_centerInParent="true"
            >
        <ImageView 
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/title"
            android:layout_marginRight="@dimen/bd_wallet_safekeyboard_logo_marginright"
            android:contentDescription="@null"
            android:src="@drawable/wallet_base_safekeyboard_logo"
            android:scaleType="centerInside"
            />
        <TextView 
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_base_safekeyboard_title"
            android:textSize="@dimen/bd_wallet_safekeyboard_title_textsize"
            android:textColor="@color/bd_wallet_safekeyboard_title_textcolor"/>
        </LinearLayout>
        <ImageButton 
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/bd_wallet_safekeyboard_closebtn_marginright"
            android:contentDescription="@null"
            android:clickable="false"
            android:background="@drawable/wallet_base_safekeyboard_close_default"/>
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bd_wallet_safekeyboard_grayline_width_0.5"
        android:background="@color/bd_wallet_safekeyboard_linegray"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button 
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bd_wallet_safekeyboard_button_height"
            android:text="1"
            android:textColor="@color/bd_wallet_safekeyboard_keynum_textcolor"
            android:textSize="@dimen/bd_wallet_safekeyboard_keynum_textsize"
            android:background="@drawable/wallet_base_safekeyboard_numkey_selector"
            android:layout_weight="1"/>
        <View 
            android:layout_width="@dimen/bd_wallet_safekeyboard_grayline_width_0.5"
            android:layout_height="fill_parent"
            android:background="@color/bd_wallet_safekeyboard_linegray"/>
        <Button 
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bd_wallet_safekeyboard_button_height"
            android:text="2"
            android:textColor="@color/bd_wallet_safekeyboard_keynum_textcolor"
            android:textSize="@dimen/bd_wallet_safekeyboard_keynum_textsize"
            android:background="@drawable/wallet_base_safekeyboard_numkey_selector"
            android:layout_weight="1"/>
        <View 
            android:layout_width="@dimen/bd_wallet_safekeyboard_grayline_width_0.5"
            android:layout_height="fill_parent"
            android:background="@color/bd_wallet_safekeyboard_linegray"/>
        <Button 
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bd_wallet_safekeyboard_button_height"
            android:text="3"
            android:textColor="@color/bd_wallet_safekeyboard_keynum_textcolor"
            android:textSize="@dimen/bd_wallet_safekeyboard_keynum_textsize"
            android:background="@drawable/wallet_base_safekeyboard_numkey_selector"
            android:layout_weight="1"/>
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bd_wallet_safekeyboard_grayline_width_0.5"
        android:background="@color/bd_wallet_safekeyboard_linegray"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button 
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bd_wallet_safekeyboard_button_height"
            android:text="4"
            android:textColor="@color/bd_wallet_safekeyboard_keynum_textcolor"
            android:textSize="@dimen/bd_wallet_safekeyboard_keynum_textsize"
            android:background="@drawable/wallet_base_safekeyboard_numkey_selector"
            android:layout_weight="1"/>
        <View 
            android:layout_width="@dimen/bd_wallet_safekeyboard_grayline_width_0.5"
            android:layout_height="fill_parent"
            android:background="@color/bd_wallet_safekeyboard_linegray"/>
        <Button 
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bd_wallet_safekeyboard_button_height"
            android:text="5"
            android:textColor="@color/bd_wallet_safekeyboard_keynum_textcolor"
            android:textSize="@dimen/bd_wallet_safekeyboard_keynum_textsize"
            android:background="@drawable/wallet_base_safekeyboard_numkey_selector"
            android:layout_weight="1"/>
        <View 
            android:layout_width="@dimen/bd_wallet_safekeyboard_grayline_width_0.5"
            android:layout_height="fill_parent"
            android:background="@color/bd_wallet_safekeyboard_linegray"/>
        <Button 
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bd_wallet_safekeyboard_button_height"
            android:text="6"
            android:textColor="@color/bd_wallet_safekeyboard_keynum_textcolor"
            android:textSize="@dimen/bd_wallet_safekeyboard_keynum_textsize"
            android:background="@drawable/wallet_base_safekeyboard_numkey_selector"
            android:layout_weight="1"/>
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bd_wallet_safekeyboard_grayline_width_0.5"
        android:background="@color/bd_wallet_safekeyboard_linegray"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button 
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bd_wallet_safekeyboard_button_height"
            android:text="7"
            android:textColor="@color/bd_wallet_safekeyboard_keynum_textcolor"
            android:textSize="@dimen/bd_wallet_safekeyboard_keynum_textsize"
            android:background="@drawable/wallet_base_safekeyboard_numkey_selector"
            android:layout_weight="1"/>
        <View 
            android:layout_width="@dimen/bd_wallet_safekeyboard_grayline_width_0.5"
            android:layout_height="fill_parent"
            android:background="@color/bd_wallet_safekeyboard_linegray"/>
        <Button 
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bd_wallet_safekeyboard_button_height"
            android:text="8"
            android:textColor="@color/bd_wallet_safekeyboard_keynum_textcolor"
            android:textSize="@dimen/bd_wallet_safekeyboard_keynum_textsize"
            android:background="@drawable/wallet_base_safekeyboard_numkey_selector"
            android:layout_weight="1"/>
        <View 
            android:layout_width="@dimen/bd_wallet_safekeyboard_grayline_width_0.5"
            android:layout_height="fill_parent"
            android:background="@color/bd_wallet_safekeyboard_linegray"/>
        <Button 
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bd_wallet_safekeyboard_button_height"
            android:text="9"
            android:textColor="@color/bd_wallet_safekeyboard_keynum_textcolor"
            android:textSize="@dimen/bd_wallet_safekeyboard_keynum_textsize"
            android:background="@drawable/wallet_base_safekeyboard_numkey_selector"
            android:layout_weight="1"/>
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bd_wallet_safekeyboard_grayline_width_0.5"
        android:background="@color/bd_wallet_safekeyboard_linegray"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button 
            android:id="@+id/btn_x"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bd_wallet_safekeyboard_button_height"
            android:text="X"
            android:textColor="@color/bd_wallet_safekeyboard_keynum_textcolor"
            android:textSize="@dimen/bd_wallet_safekeyboard_keynum_textsize"
            android:background="@drawable/wallet_base_safekeyboard_delkey_selector"
            android:layout_weight="1"/>
        <View 
            android:layout_width="@dimen/bd_wallet_safekeyboard_grayline_width_0.5"
            android:layout_height="fill_parent"
            android:background="@color/bd_wallet_safekeyboard_linegray"/>
        <Button 
            android:id="@+id/btn0"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bd_wallet_safekeyboard_button_height"
            android:text="0"
            android:textColor="@color/bd_wallet_safekeyboard_keynum_textcolor"
            android:textSize="@dimen/bd_wallet_safekeyboard_keynum_textsize"
            android:background="@drawable/wallet_base_safekeyboard_numkey_selector"
            android:layout_weight="1"/>
        <View 
            android:layout_width="@dimen/bd_wallet_safekeyboard_grayline_width_0.5"
            android:layout_height="fill_parent"
            android:background="@color/bd_wallet_safekeyboard_linegray"/>
        <ImageButton 
            android:id="@+id/btn_del"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bd_wallet_safekeyboard_button_height"
            android:layout_weight="1"
            android:src="@drawable/wallet_base_safekeyboard_delete_icon"
            android:background="@drawable/wallet_base_safekeyboard_delkey_selector"/>
    </LinearLayout>
    

</LinearLayout>
