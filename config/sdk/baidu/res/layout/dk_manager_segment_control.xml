<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/manager_segment_radiogroup"
    android:checkedButton="@+id/manager_segment_download"
    style="@style/dk_segment_layout_style" >

    <RadioButton
        android:id="@+id/manager_segment_download"
        android:text="@string/dk_download_download"
         style="@style/dk_segment_item_style"
        android:background="@drawable/dk_segment_radio_left_selector"/>

    <RadioButton
        android:id="@+id/manager_segment_update"
        android:text="@string/dk_download_update"
         style="@style/dk_segment_item_style"
        android:background="@drawable/dk_segment_radio_middle_selector"/>

    <RadioButton
        android:id="@+id/manager_segment_installed"
        android:text="@string/dk_installed"
         style="@style/dk_segment_item_style"
        android:background="@drawable/dk_segment_radio_right_selector"
         />
</RadioGroup>