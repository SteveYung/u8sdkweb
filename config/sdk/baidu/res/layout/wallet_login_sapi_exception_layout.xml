    <TextView
        android:id="@+id/exception_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="@string/ebpay_no_network"
        android:textSize="@dimen/bd_wallet_text_size_normal"
        android:textColor="#c6c6c6"
        />
    <Button
        android:id="@+id/exception_try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/exception_text_view"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@color/ebpay_transparent"
        android:text="重试"
        android:textColor="#f02216"
        android:textSize="@dimen/bd_wallet_text_size_normal"
        />
    
</RelativeLayout>