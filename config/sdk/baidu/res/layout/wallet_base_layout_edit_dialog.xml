<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <com.baidu.wallet.base.widget.PluginEditText
        android:id="@+id/dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical|left"
        android:textColor="@color/bd_wallet_edittextdialog_textcolor_normal"
        android:background="@drawable/wallet_base_edit_text_board_for_nfc"
        android:textColorHint="@color/bd_wallet_edittextdialog_textcolor_gray"
        android:maxLength="8"
        android:layout_marginLeft="13dp"
    	android:layout_marginRight="13dp"
    	android:paddingLeft="8dp"
    	android:textSize="16sp" />

    <TextView
        android:id="@+id/dialog_text_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="21dp"
        android:textColor="#b1b1b1" />

</LinearLayout>