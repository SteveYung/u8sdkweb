<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bdp_paycenter_layout_dialog_support_bank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/bdp_paycenter_layout_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/bdp_paycenter_tv_dialog_tip_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/bdp_paycenter_credit_card_manage"
                android:textColor="#333333"
                android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />

            <ImageView
                android:id="@+id/bdp_paycenter_dialog_iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="4dp"
                android:paddingLeft="50dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:src="@drawable/bdp_paycenter_btn_dialog_close_selector" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bdp_paycenter_dialog_dot_bg" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bdp_paycenter_layout_bind_card_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:fillViewport="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/bdp_paycenter_tv_tip_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/bdp_paycenter_credit_binded_card"
                    android:textColor="#333333"
                    android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />

                <LinearLayout
                    android:id="@+id/bdp_paycenter_layout_card_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bdp_paycenter_btn_dialog_close"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/bdp_paycenter_btn_pay_cancel_selector"
                android:gravity="center"
                android:text="@string/bdp_paycenter_credit_dialog_close"
                android:textColor="@color/bdp_dark_gray"
                android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />

            <LinearLayout
                android:id="@+id/bdp_paycenter_layout_ensure_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/bdp_paycenter_tv_dialog_remove_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/bdp_paycenter_credit_removebind_ensure"
                    android:textColor="@color/bdp_color_orangeyellow"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/bdp_paycenter_btn_dialog_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:background="@drawable/bdp_paycenter_btn_pay_cancel_selector"
                        android:gravity="center"
                        android:text="@string/bdp_paycenter_alipay_cancel"
                        android:textColor="@color/bdp_dark_gray"
                        android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="38dp" />

                    <Button
                        android:id="@+id/bdp_paycenter_btn_dialog_ensure"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:background="@drawable/bdp_paycenter_btn_pay_cancel_selector"
                        android:gravity="center"
                        android:text="@string/bdp_paycenter_alipay_ensure"
                        android:textColor="@color/bdp_dark_gray"
                        android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bdp_paycenter_layout_unbind_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp" >

        <TextView
            android:id="@+id/bdp_paycenter_tv_unbind_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="@string/bdp_paycenter_credit_unbind_card"
            android:textColor="#333333"
            android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />

        <Button
            android:id="@+id/bdp_paycenter_btn_dialog_close1"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/bdp_paycenter_btn_pay_cancel_selector"
            android:gravity="center"
            android:text="@string/bdp_paycenter_credit_dialog_close"
            android:textColor="@color/bdp_dark_gray"
            android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />
    </LinearLayout>

</LinearLayout>