<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bd_wallet_white"
        android:orientation="vertical"
        >
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bd_wallet_dialog_linegray_d9d9d9"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/bd_wallet_white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

        <com.baidu.wallet.base.widget.NetImageView
                android:id="@+id/wallet_personal_my_bank_card_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/wallet_service_img"
                android:layout_weight="2"
                />

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

            <TextView
                    android:id="@+id/card_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/ebpay_text_111111"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

            <TextView
                    android:id="@+id/card_tip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/bd_wallet_text_gray2"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/card_name_tv"
                    android:text="@string/bank_card_dialog_no_support"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

        </RelativeLayout>

        <ImageButton
                android:id="@+id/bank_card_check_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:src="@drawable/bd_wallet_image_check_bg"
                android:scaleType="fitStart"
                android:background="@color/ebpay_transparent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="false"
                />

    </LinearLayout>

</LinearLayout>