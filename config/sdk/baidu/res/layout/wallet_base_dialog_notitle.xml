        <!-- android:visibility="gone" /> -->
    </LinearLayout>

    <LinearLayout
            android:id="@+id/dialog_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/bd_wallet_dialog_linegray"/>

        <Button
                android:id="@+id/i_konw_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bd_wallet_dialog_bottombutton_height"
                android:background="@drawable/wallet_base_dialog_btn_selector"
                android:text="@string/ebpay_know"
                android:textColor="@color/bd_wallet_dialog_text_e94643"
