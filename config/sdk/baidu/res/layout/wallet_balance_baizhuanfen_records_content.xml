<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".core.plugins.pluginproxy.BaseWalletProxyActivity" >

    <com.baidu.wallet.base.widget.PullToRefreshListView
        android:id="@+id/bd_wallet_pull_up_view"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:id="@+id/bd_wallet_empty_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wallet_base_window_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/bd_wallet_empty_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="78dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/wallet_balance_banzhuanfen_no_hostory" />

        <TextView
            android:id="@+id/bd_wallet_error_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/wallet_baizhuanfen_new_no_tip"
            android:textColor="@color/wallet_balance_baizhuanfen_text_normal"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/bd_wallet_error_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/wallet_baizhuanfen_new_look_tip"
            android:textColor="@color/wallet_balance_baizhuanfen_text_normal"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>