<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/wallet_home_item_bg"
    android:paddingBottom="10dp" >

    <com.baidu.wallet.base.widget.NetImageView
        android:id="@+id/wallet_basic_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/wallet_basic_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wallet_basic_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textColor="@color/ebpay_text_333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/wallet_basic_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wallet_basic_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textColor="@color/ebpay_text_gray"
        android:textSize="12sp" />

    <View
        android:id="@+id/wallet_basic_point"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_above="@+id/wallet_basic_type"
        android:layout_marginBottom="-10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/wallet_basic_type"
        android:background="@drawable/wallet_home_shape_red_point"
        android:visibility="gone" />
    
    <com.baidu.wallet.base.widget.NetImageView
        android:id="@+id/wallet_basic_new"
        android:layout_width="47dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:contentDescription="@null"
        android:scaleType="fitXY"/>

</RelativeLayout>