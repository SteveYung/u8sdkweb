<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ebpay_bankcard_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ebpay_textview_bg_selector" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bd_wallet_pwdpay_item_height"
        android:paddingLeft="@dimen/ebpay_line_margin_15"
        android:paddingRight="@dimen/ebpay_line_margin_15" >

        <com.baidu.wallet.base.widget.NetImageView
            android:id="@+id/ebpay_bank_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/wallet_base_icon_logo"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ebpay_bankname_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ebpay_line_margin_10"
            android:layout_toRightOf="@id/ebpay_bank_logo"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ebpay_bank_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ebpay_text_111111"
                android:textSize="@dimen/ebpay_text_size_14" />

            <TextView
                android:id="@+id/ebpay_bank_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bd_wallet_text_gray2"
                android:textSize="@dimen/ebpay_text_size_12"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ebpay_bankcard_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ebpay_radio_button_selector"
            android:scaleType="center" />
    </RelativeLayout>

</LinearLayout>